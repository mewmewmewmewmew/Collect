<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clothes_rack_bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#a6000000"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/as_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/as_font_awesome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fontawesome_logo"
            android:textAppearance="@style/TextAppearance.FontAwesome"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="45dp"
            />

        <TextView
            android:layout_below="@id/as_font_awesome_logo"
            android:id="@+id/as_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLLECT"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.FontPathBold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="38dp"
            />

        <TextView
            android:id="@+id/as_hook_statement"
            android:layout_below="@+id/as_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Explore and discover extraordinary things everyday"
            android:textAppearance="@style/TextAppearance.FontPathNormal"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/as_login_layout"
        android:layout_below="@+id/as_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp">

        <Button
            android:layout_weight="0.5"
            android:id="@+id/as_login_button"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="60dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.FontPathNormal"
            android:background="@drawable/selector_button_transparent_white_outline"/>

        <Button
            android:layout_weight="0.5"
            android:id="@+id/as_register_button"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="60dp"
            android:text="Register"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.FontPathNormal"
            android:background="@drawable/selector_button_pink"/>
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>