<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/selector_button_blue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lvu_profile_picture"
        android:layout_margin="15dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/blank_profile"/>

    <RelativeLayout
        android:id="@+id/lvu_text_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lvu_profile_picture">

        <TextView
            android:id="@+id/lvu_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_below="@+id/fp_profile_picture"
            android:textAppearance="@style/TextAppearance.FontPathBold"
            android:textStyle="bold"
            android:text="Profile Name"/>

        <TextView
            android:id="@+id/lvu_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_below="@+id/lvu_name_textview"
            android:textAppearance="@style/TextAppearance.FontPathNormal"
            android:text="\@username"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/lvu_follow_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:src="@drawable/follow_check"/>

</RelativeLayout>